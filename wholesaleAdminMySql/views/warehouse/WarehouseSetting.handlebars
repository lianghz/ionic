                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <select id="warehouse-ff-cb-status" name="status" class="easyui-combobox" panelHeight="auto" style="width:200pt" data-options="label:'状态:',prompt:'输入重量',required:true,validateOnCreate:false,err:err">
                        <option value="-1">选择状态</option>
                        <option value="1">1-有效</option>
                        <option value="0">0-无效</option>
                    </select>
                </td>
            </tr>
        </table>
    </form>
</div>

{{!-- 脚本 --}}
<script>

    $.extend($.fn.textbox.methods, {
        addClearBtn: function (jq, iconCls) {
            return jq.each(function () {
                var t = $(this);
                var opts = t.textbox('options');
                opts.icons = opts.icons || [];
                opts.icons.unshift({
                    iconCls: iconCls,
                    handler: function (e) {
                        $(e.data.target).textbox('clear').textbox('textbox').focus();
                        $(this).css('visibility', 'hidden');
                    }
                });
                t.textbox();
                if (!t.textbox('getText')) {
                    t.textbox('getIcon', 0).css('visibility', 'hidden');
                }
                t.textbox('textbox').bind('keyup', function () {
                    var icon = t.textbox('getIcon', 0);
                    if ($(this).val()) {
                        icon.css('visibility', 'visible');
                    } else {
                        icon.css('visibility', 'hidden');
                    }
                });
            });
        }
    });


    $(function () {

        //-----

        $('#warehouse-txt-warehouseId').textbox({
            prompt: '仓库编号',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#warehouse-txt-name').textbox({
            prompt: '仓库名称',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#warehouse-txt-address').textbox({
            prompt: '仓库地址',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#warehouse-date-priceListId').textbox({
            prompt: '价表编号',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        //------

        $('#warehouse-ff').form({
            onSubmit: function () {
                if ($(this).form('enableValidation').form('validate')) {
                    $('#warehouse-dlg').dialog('close');
                    MaskUtil.mask();
                    return true;
                } else {
                    return false;
                }
            },
            success: function (data) {
                MaskUtil.unmask();
                data = JSON.parse(data);
                $.messager.alert('消息提示:', "<center>" + data[0]["pramResult"] + "</center>");
                $('#warehouse-dg').datagrid('reload');
            },

        });

        //search
        $("#warehouse-btn-search").click(function () {
            $('#warehouse-dg').datagrid({
                url: '/warehouse/getWarehouse',
                pagePosition: 'bottom',
                rownumbers: true,
                singleSelect: true,
                queryParams: {
                    warehouseId: $('#warehouse-txt-warehouseId').textbox('getValue'),
                    name: $('#warehouse-txt-name').textbox('getValue'),
                    address: $('#warehouse-txt-address').textbox('getValue'),
                    priceListId: $('#warehouse-date-priceListId').textbox('getValue'),
                    status: $('#warehouse-cbb-status').combobox('getValue')
                }
            });
        })
        //end search
    });

    function warehouseOpenDialogAdd() {
        $('#warehouse-ff').form({
            url: '/warehouse/addWarehouse'
        })
        $('#warehouse-dlg').dialog({
            title: "添加仓库",
            modal: true,
        }).dialog('open');
    }

    function warehouseOpenDialogEdit() {
        $('#warehouse-ff').form({
            url: '/warehouse/modifywarhouse'
        })
        $('#warehouse-ff-txt-type').val("2");
        var row = $('#warehouse-dg').datagrid('getSelected');
        if (!row) {
            $.messager.alert('提示', '<center>请选择一个仓库数据!</center>');
        }
        $('#warehouse-ff').form('load', {
            name: row.WarehouseName,
            warehouseId: row.WarehouseId,
            priceListId: row.PriceListId,
            address: row.Address,
            status: row.Status
        });

        $('#warehouse-dlg').dialog({
            title: "修改仓库",
            modal: true,
        }).dialog('open');
    }
    function Search() {

    }


</script>