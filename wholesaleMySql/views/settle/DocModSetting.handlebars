<script>
    $.extend($.fn.textbox.methods, {
        addClearBtn: function (jq, iconCls) {
            return jq.each(function () {
                var t = $(this);
                var opts = t.textbox('options');
                opts.icons = opts.icons || [];
                opts.icons.unshift({
                    iconCls: iconCls,
                    handler: function (e) {
                        $(e.data.target).textbox('clear').textbox('textbox').focus();
                        $(this).css('visibility', 'hidden');
                    }
                });
                t.textbox();
                if (!t.textbox('getText')) {
                    t.textbox('getIcon', 0).css('visibility', 'hidden');
                }
                t.textbox('textbox').bind('keyup', function () {
                    var icon = t.textbox('getIcon', 0);
                    if ($(this).val()) {
                        icon.css('visibility', 'visible');
                    } else {
                        icon.css('visibility', 'hidden');
                    }
                });
            });
        }
    });


    $(function () {

        //-----
        $('#docmod-txt-loadId').textbox({
            prompt: '装运单号',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#docmod-txt-documentId').textbox({
            prompt: '货单号',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#docmod-date-startDate').datebox({
            prompt: '选择开始时间',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#docmod-date-endDate').datebox({
            prompt: '选择结束时间',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#docmod-detail-txt-piece').textbox({
            prompt: '商品价格',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');
        //------

    });

    function docModAdd() {
        var fromWarehouseId = $('#docmod-cg-fromWarehouseId').combogrid('getValue');
        var toWarehouseId = $('#docmod-cg-toWarehouseId').combogrid('getValue');
        if (fromWarehouseId == "") {
            $.messager.alert('消息提示:', "<center>请选择发出仓库</center>");
            return;
        }
        if (toWarehouseId == "") {
            $.messager.alert('消息提示:', "<center>请选择接收仓库</center>");
            return;
        }
        $.post("/warehouse/adddocMod", { fromWarehouseId: fromWarehouseId, toWarehouseId: toWarehouseId },
            function (data) {
                $.messager.alert('消息提示:', "<center>" + data[0]["pramResult"] + "</center>");
                $('#docmod-dg').datagrid('reload');
            }
        );
    }

    function docModSearch() {
        var startDate = $('#docmod-date-startDate').val();
        var endDate = $('#docmod-date-endDate').val();
        var warehouseId = $('#docmod-cg-warehouseId').val();
        var loadId = $('#docmod-txt-loadId').val();
        var documentId = $('#docmod-txt-documentId').val();

        warehouseId = warehouseId ? warehouseId : -1;
        loadId = loadId ? loadId : 0;
        startDate = startDate ? startDate : '1991-1-1';
        endDate = endDate ? endDate : '9999-12-30';
        documentId = documentId ? documentId : 0;
        $('#docmod-dg').datagrid({
            url: '/document/getDocumentHeaderHist',
            pagePosition: 'bottom',
            rownumbers: true,
            singleSelect: true,
            queryParams: {
                warehouseId: warehouseId,
                loadId: loadId,
                startDate: startDate,
                endDate: endDate,
                documentId: documentId
            },
            onSelect: function (index, row) {
                getdocModDetail(row.DocumentId);
            }

        });
    }
    function getdocModDetail(documentId) {
        $('#docmod-detail-dg').datagrid({
            url: '/document/getDocumentDetailHist',
            pagePosition: 'bottom',
            rownumbers: true,
            singleSelect: true,
            queryParams: {
                documentId: documentId
            }
        });
    }

    function docModDetailMod() {
        var headerRow = $('#docmod-dg').datagrid('getSelected')
        if (!headerRow) {
            $.messager.alert('消息提示:', "<center>请选择一条货单</center>");
            return;
        }
        var row = $('#docmod-detail-dg').datagrid('getSelected')
        if (!row) {
            $.messager.alert('消息提示:', "<center>请选择一个商品</center>");
            return;
        }
        var documentId = headerRow.DocumentId;
        var goodsId = row.GoodsId;
        var  piece= $('#docmod-detail-txt-piece').val();
        //var detailRow = $('#docmod-detail-dg').datagrid('getSelected');
        if (!piece) {
            $.messager.alert('消息提示:', "<center>请输入修改的商品价格</center>");
            return;
        }
        //var docModId = detailRow.docModId;
        //var goodsId = detailRow.GoodsId;
        $.post("/document/modifyDocument", { documentId: documentId, goodsId: goodsId, piece: piece},
            function (data) {
                $.messager.alert('消息提示:', "<center>" + data[0]["pramCode"] + "-" + data[0]["pramResult"] + "</center>");
                $('#docmod-detail-dg').datagrid('reload');
            }
        );
    }

//usage
