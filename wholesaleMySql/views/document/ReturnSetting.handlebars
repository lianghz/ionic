        $('#return-txt-loadId').textbox({
            prompt: '装运单号',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#return-txt-returnId').textbox({
            prompt: '回库单号',
            icons: [{
