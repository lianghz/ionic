    function returnAdd() {
        var fromWarehouseId = $('#return-cg-fromWarehouseId').combogrid('getValue');
        var toWarehouseId = $('#return-cg-toWarehouseId').combogrid('getValue');
        if (fromWarehouseId == "") {
            $.messager.alert('消息提示:', "<center>请选择发出仓库</center>");
            return;
        }
        if (toWarehouseId == "") {
            $.messager.alert('消息提示:', "<center>请选择接收仓库</center>");
            return;
        }
        $.post("/warehouse/addreturn", { fromWarehouseId: fromWarehouseId, toWarehouseId: toWarehouseId },
            function (data) {
                $.messager.alert('消息提示:', "<center>" + data[0]["pramResult"] + "</center>");
                $('#return-dg').datagrid('reload');
            }
        );
    }

    function returnSearch() {
        var returnId = $('#return-txt-returnId').val();
        var loadId = $('#return-txt-loadId').val();
        var startDate = $('#return-date-startDate').val();
        var endDate = $('#return-date-endDate').val();
        var staffId = -1;
        var balanceStatus = -1;
        var warehouseId = $('#return-cg-warehouseId').val();
        warehouseId = warehouseId ? warehouseId : -1;
        returnId = returnId ? returnId : -1;
        loadId = loadId ? loadId : -1;
        startDate = startDate ? startDate : '1991-1-1';
        endDate = endDate ? endDate : '9999-12-30';
        $('#return-dg').datagrid({
            url: '/document/getReturnList',
            pagePosition: 'bottom',
            rownumbers: true,
            singleSelect: true,
            queryParams: {
                returnId: returnId,
                loadId: loadId,
                startDate: startDate,
                endDate: endDate,
                staffId: staffId,
                balanceStatus: balanceStatus,
                warehouseId: warehouseId
            },
            onSelect: function (index, row) {
                getreturnDetail(row.ReturnId);
            }

        });
    }
    function getreturnDetail(returnId) {
        $('#return-detail-dg').datagrid({
            url: '/document/getReturnDetail',
            pagePosition: 'bottom',
            rownumbers: true,
            singleSelect: true,
            queryParams: {
                returnId: returnId
            }
        });
    }

    function returnDetailAdd() {
        var headerRow = $('#return-dg').datagrid('getSelected')
        if (!headerRow) {
            $.messager.alert('消息提示:', "<center>请选择一条装运单</center>");
            return;
        }
        var loadId = headerRow.LoadId;
        var warehouseId = headerRow.WarehouseId;

        var goodsId = $('#return-detail-txt-goodsId').val()
        var cases = $('#return-detail-txt-cases').val();
        var piece = $('#return-detail-txt-piece').val();
        var realDeliveryManId = $('#return-cg-staffId').val();
        var checkInDate = getNowFormatDate();

        //var detailRow = $('#return-detail-dg').datagrid('getSelected');
        if (!goodsId) {
            $.messager.alert('消息提示:', "<center>请输入商品编号</center>");
            return;
        }
        if (!realDeliveryManId) {
            $.messager.alert('消息提示:', "<center>请选择实际送货人</center>");
            return;
        }

        cases = cases ? cases : 0;
        piece = piece ? piece : 0;
        //var ReturnId = detailRow.ReturnId;
        //var goodsId = detailRow.GoodsId;
        $.post("/document/addReturn", { loadId: loadId, warehouseId: warehouseId, goodsId: goodsId, cases: cases, piece: piece, realDeliveryManId: realDeliveryManId,checkInDate:checkInDate},
            function (data) {
                $.messager.alert('消息提示:', "<center>" + data[0]["pramCode"] + "-" + data[0]["pramResult"] + "</center>");
                $('#return-detail-dg').datagrid('reload');
            }
        );
    }

