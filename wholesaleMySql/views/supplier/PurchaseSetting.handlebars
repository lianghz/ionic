<script>
    $.extend($.fn.textbox.methods, {
        addClearBtn: function (jq, iconCls) {
            return jq.each(function () {
                var t = $(this);
                var opts = t.textbox('options');
                opts.icons = opts.icons || [];
                opts.icons.unshift({
                    iconCls: iconCls,
                    handler: function (e) {
                        $(e.data.target).textbox('clear').textbox('textbox').focus();
                        $(this).css('visibility', 'hidden');
                    }
                });
                t.textbox();
                if (!t.textbox('getText')) {
                    t.textbox('getIcon', 0).css('visibility', 'hidden');
                }
                t.textbox('textbox').bind('keyup', function () {
                    var icon = t.textbox('getIcon', 0);
                    if ($(this).val()) {
                        icon.css('visibility', 'visible');
                    } else {
                        icon.css('visibility', 'hidden');
                    }
                });
            });
        }
    });

    $(function () {
        $('#purchase-txt-supplierId').textbox({
            prompt: '供应商编号',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#purchase-txt-purchaseId').textbox({
            prompt: '采购单编号',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');
        $('#purchase-detail-txt-goodsId').textbox({
            prompt: '商品编号',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#purchase-detail-txt-cases').textbox({
            prompt: '箱数',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');

        $('#purchase-detail-txt-piece').textbox({
            prompt: '散数',
            icons: [{
                iconCls: 'icon-filter'
            }]
        }).textbox('addClearBtn', 'icon-clear');


        $('#purchase-ff').form({
            onSubmit: function () {
                if ($(this).form('enableValidation').form('validate')) {
                    $('#purchase-dlg').dialog('close');
                    MaskUtil.mask();
                    return true;
                } else {
                    return false;
                }
            },
            success: function (data) {
                MaskUtil.unmask();
                data = JSON.parse(data);
                $.messager.alert('消息提示:', "<center>" + data[0]["pramResult"] + "</center>");
                if (data[0]["pramCode"] == 1) {
                    $('#purchase-detail-dg').datagrid('reload');
                }
            },

        });
    });

    function purchaseSearch() {
        var supplierId = $('#purchase-cg-supplierId').val();
        var warehouseId = $('#purchase-cg-warehouseId').val();
        var purchaseId = $('#purchase-txt-purchaseId').val();
        var status = $('#purchase-cb-status').val();
        var startDate = $('#purchase-date-startDate').val();
        var endDate = $('#purchase-date-endDate').val();

        supplierId = supplierId ? supplierId : -1;
        warehouseId = warehouseId ? warehouseId : -1;
        purchaseId = purchaseId ? purchaseId : -1;

        $('#purchase-dg').datagrid({
            url: '/supplier/getPurchaseHeader',
            queryParams: {
                supplierId: supplierId,
                warehouseId: warehouseId,
                purchaseId: purchaseId,
                status: status,
                startDate: startDate,
                endDate: endDate,
            },
            pagePosition: 'bottom',
            rownumbers: true,
            singleSelect: true,
            onSelect: function (index, row) {
                getpurchaseDetail(row);
            }
        });
    }

    function getpurchaseDetail(row) {
        var purchaseId = row.PurchaseId;
        $('#purchase-detail-dg').datagrid({
            url: '/supplier/getPurchaseDetail',
            pagePosition: 'bottom',
            rownumbers: true,
            singleSelect: true,
            queryParams: {
                purchaseId: purchaseId
            }
        });
    }

    function purchaseAccept() {
        var row = $('#purchase-dg').datagrid('getSelected')
        if (!row) {
            $.messager.alert('消息提示:', "<center>请选择一条采购单</center>");
            return;
        }

        var purchaseId = row.PurchaseId;

        $.post("/supplier/setPurchaseStatus", { purchaseId: purchaseId, status: 1, cancelReason: '' },
            function (data) {
                $.messager.alert('消息提示:', "<center>" + data[0]["pramCode"] + "-" + data[0]["pramResult"] + "</center>");
                $('#purchase-dg').datagrid('reload');
            }
        );
    }

    function purchaseDetailAdd() {
        var row = $('#purchase-dg').datagrid('getSelected')
        if (!row) {
            $.messager.alert('消息提示:', "<center>请选择一条采购单</center>");
            return;
        }
        var purchaseId = row.PurchaseId;
        var goodsId = $('#purchase-detail-txt-goodsId').val();
        var cases = $('#purchase-detail-txt-cases').val();
        var piece = $('#purchase-detail-txt-piece').val();
        if (!goodsId) {
            $.messager.alert('消息提示:', "<center>请输入商品编号</center>");
            return;
        }
        if (!cases && !piece) {
            $.messager.alert('消息提示:', "<center>请输入箱数或散数</center>");
            return;
        }
        cases = cases ? cases : 0;
        piece = piece ? piece : 0;
        $.post("/supplier/addPurchaseDetail", { purchaseId: purchaseId, goodsId: goodsId, cases: cases, piece: piece },
            function (data) {
                $.messager.alert('消息提示:', "<center>" + data[0]["pramCode"] + "-" + data[0]["pramResult"] + "</center>");
                $('#purchase-detail-dg').datagrid('reload');
            }
        );
    }

    function purchaseCancel() {
        var row = $('#purchase-dg').datagrid('getSelected')
        if (!row) {
            $.messager.alert('消息提示:', "<center>请选择一条采购单</center>");
            return;
        }
        var purchaseId = row.PurchaseId;
        var status = 0;
        $.messager.prompt('取消采购单', '请输入取消原因', function (cancelReason) {
            if (cancelReason) {
                $.post("/supplier/setPurchaseStatus", { purchaseId: purchaseId, status: status, cancelReason: cancelReason },
                    function (data) {
                        $.messager.alert('消息提示:', "<center>" + data[0]["pramCode"] + "-" + data[0]["pramResult"] + "</center>");
                        $('#purchase-dg').datagrid('reload');
                    }
                );
            }
        });
    }

    function purchaseAdd() {
        var row = $('#purchase-cg-warehouseId').combogrid('grid').datagrid('getSelected');
        if (!row) {
            $.messager.alert('消息提示:', "<center>请选择一个仓库</center>");
            return;
        }
        var row2 = $('#purchase-cg-supplierId').combogrid('grid').datagrid('getSelected');
        if (!row2) {
            $.messager.alert('消息提示:', "<center>请选择一个供应商</center>");
            return;
        }
        var warehouseName = row.WarehouseName;
        var warehouseId = row.WarehouseId;
        var supplierName = row2.ItemText;
        var supplierId = row2.ItemValue;
        $.messager.confirm('确认', '为仓库：' + warehouseName + '<br>供应商：' + supplierName + '<br>建立采购单?', function (r) {
            if (r) {
                $.post("/supplier/addPurchaseHeader", { warehouseId: warehouseId, supplierId: supplierId },
                    function (data) {
                        $.messager.alert('消息提示:', "<center>" + data[0]["pramCode"] + "-" + data[0]["pramResult"] + "</center>");
                        purchaseSearch();
                        //$('#supplierPrice-detail-dg').datagrid('reload');
                    }
                );
            }
        });
    }

    function Search() {

    }


</script>